@using Microsoft.Extensions.Options
@model eCinemaMS.Models.Account.ApplicationUser
@inject IOptions<eCinemaMS.Data.StripeSettings> Stripe

@{
    ViewData["Title"] = "Payment for Subscription";
}
<div class="container">
    <h3>Payment for Subscription</h3>
</div>
<div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="../Images/banners/about.png" class="d-block w-100" alt="..." style="width : 1900px; height : 400px" >
    </div>
  </div>
</div>
<br />
<div class="row text">
    <div class="col-md-8 offset-2">
        <div class="row">
            <div class="col-md-8 offset-2">
                <br />
                    
                <div class="container-fluid">
                    <p class="justify-content-center">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book.</p>
                    <div class="float-start">
                        <h5>Email : @Html.DisplayFor(Model => Model.Email)</h5>
                    </div>
                    <form class="float-end" asp-action="SubPay" method="post">
                        <article>
                            <label>Amount : RS 4,999</label>
                        </article>
                        <script src="//checkout.stripe.com/v2/checkout.js"
                        class="stripe-button"
                        data-key="@Stripe.Value.PublishableKey"
                        data-locale="auto"
                        data-description="Sample Charge">
                        </script>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

