@model Cinema

@{
    ViewData["Title"] = "Edit Cinema";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Edit Cinema</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-control text-center">
                        <img class="border-info rounded-circle" style="max-width:150px" id="PicturePreview" />
                    </div>
                    <br />
                    <div class="form-control">
                        <label asp-for="Logo" class="form-control-plaintext"></label>
                        <input asp-for="Logo" class="form-control" />
                        <span asp-validation-for="Logo" class="text-danger"></span>

                        <label asp-for="Name" class="form-control-plaintext"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                        <label asp-for="Address" class="form-control-plaintext"></label>
                        <textarea asp-for="Address" class="form-control"></textarea>
                        <span asp-validation-for="Address" class="text-danger"></span>

                        <label asp-for="Seats" class="form-control-plaintext"></label>
                        <input asp-for="Seats" class="form-control" />
                        <span asp-validation-for="Seats" class="text-danger"></span>

                    </div>
                    <div class="form-control">
                        <input type="submit" value="Update" class="btn btn-outline-success float-end" />
                        <a asp-action="index" class="btn btn-outline-secondary">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>